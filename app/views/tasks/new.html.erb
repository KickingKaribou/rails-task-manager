<h2>Create a new task</h2>

<%= form_for(@restaurant) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.label :rating %>
  <%= f.input_field :completed %>
  <%= f.submit %>
<% end %>

<p><%= link_to "All tasks", tasks_path %></p>
